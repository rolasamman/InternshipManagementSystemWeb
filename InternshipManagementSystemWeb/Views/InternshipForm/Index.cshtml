@model IEnumerable<InternshipManagementSystemWeb.ViewModels.InternshipFormViewModel>

@{
                /**/

                ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table id=" formsTable"">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InternshipFormId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FormPath)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.InternshipFormId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FormPath)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.InternshipFormId }) |
        @Html.ActionLink("Details", "Details", new { id = item.InternshipFormId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.InternshipFormId }) |
        @Html.DisplayFor(modelItem => item.FormUpload)
        <a href="@Url.Content(item.FormPath)">Download</a>
    </td>
</tr>
}

</table>
@section scripts
{
    <script type="text/javascript" src="@Url.Content("/Scripts/DataTables/jquery.dataTables.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/DataTables/dataTables.scroller.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/DataTables/dataTables.bootstrap.min.js")"></script>

    <script type="text/javascript">
            $(document).ready(function () {
                $('#formsTable').DataTable({

                    "scrollY": "80px",
                    "scrollCollapse": true,
                    "paging": false,

                    "columnDefs": [
                        { "orderable": false, "targets": -1 }
                    ]
                });
            });
    </script>
}
