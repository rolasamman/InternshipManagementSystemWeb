<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Internship Management System</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)

    <style>
        li {
        display: block; 
        text-align: center;      
}
        li a.active {
        background-color: #FEDA9D;
}
        li a:hover:not(.active) {
        background-color: #FEDA9D;
}

    </style>
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                </button>

                <p class="navbar-brand" href="#">
                    <a href="@Url.Action("Index","Home")">
                        <img src="~/Content/themes/base/images/imagec4f21d.PNG" height="60" width="60" class="img-responsive center-block" alt=""/>
                    </a>
                </p>

                @Html.ActionLink("Internship Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if (ViewContext.HttpContext.User.IsInRole("Student"))
    {
                <li>@Html.ActionLink("Announcements", "Index", "Announcement")</li>
                <li>@Html.ActionLink("Companies", "Index", "Firm")</li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Student Internship <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Attendance", "Index", "Attendance")</li>
                        <li>@Html.ActionLink("Complains", "Index", "Complain")</li>
                        <li>@Html.ActionLink("Internship Forms", "Index", "InternshipForms")</li>
                    </ul>
                </li>
}

                    @if (ViewContext.HttpContext.User.IsInRole("Instructor"))
    {
                <li>@Html.ActionLink("Announcements", "Index", "Announcement")</li>
                <li>@Html.ActionLink("Companies", "Index", "Firm")</li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Internship Course<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Sections", "Index", "Section")</li>
                        <li>@Html.ActionLink("Student Meeting", "Index", "MeetingOnCampus")</li>
                        <li>@Html.ActionLink("Site Visits", "Index", "VisitOnSite")</li>
                        <li>@Html.ActionLink("Internship Forms", "Index", "InternshipForms")</li>

                    </ul>
                </li>
}

                    @if (ViewContext.HttpContext.User.IsInRole("Admin"))
    {
                <li>@Html.ActionLink("Announcement", "Index", "Announcement")</li>
                <li>@Html.ActionLink("Companies", "Index", "Firm")</li>
                <li>@Html.ActionLink("Student Complains", "Index", "Complain")</li>

                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Manage Internship<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Internship Sections", "Index", "InternshipCourse")</li>
                        <li>@Html.ActionLink("Internship Forms", "Index", "InternshipForms")</li>
                        <li>@Html.ActionLink("Instructors", "Index", "Instructor")</li>
                        <li>@Html.ActionLink("Students", "Index", "Student")</li>
                    </ul>
                </li>
}
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year Internship Management System | @Html.ActionLink("Contact Internship Department", "Contact") | @Html.ActionLink("Dar Al-Hekma University Website", "http://www.dah.edu.sa/") | @Html.ActionLink("Student Information System", "https://web.dah.edu.sa:82/sis/") | @Html.ActionLink("Help", "Contact")</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>